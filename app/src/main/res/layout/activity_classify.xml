<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".classify_product.ClassifyActivity"
    android:background="#2196F3"
    android:gravity="center">

    <TextView
        android:id="@+id/btn_click_add_men_classify"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#FFEB3B"
        android:gravity="center"
        android:textSize="20dp"
        android:text="Thêm điện thoại" />
    <TextView
        android:id="@+id/btn_click_add_women_classify"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Thêm phụ kiện"
        android:background="#FFC107"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/btn_click_add_phone_classify"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Thêm tai nghe"
        android:background="#FF9800"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/btn_click_add_electronic_classify"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Thêm đồng hồ"
        android:background="#FF5722"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent"
        />

</RelativeLayout>